<h3>Empresas</h3>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nome %></td>
        <td><%= empresa.email %></td>
        <td><%= link_to 'Ver', empresa_path(empresa), class:"btn btn-primary" %></td>
        <td><%# fazer aparecer o alert, ainda não tá funcionando %>
          <%= button_to 'Apagar', empresa, method: :delete,
            class:'btn btn-danger',
            data: { confirm:'Tem certeza disso?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>