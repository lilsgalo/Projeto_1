<% if current_user.admin %>
<h3>Usuários</h3>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th colspan="2">
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.nome %></td>
          <td><%= user.email %></td>
          <td><%= link_to "Ver", user_path(user), class:"btn btn-primary" %></td>
          <td><%= button_to "Apagar", user_path(user), method: :delete, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>Você não é um administrador.</h3>
<% end %>