<% if @projeto.errors.any? %>
  <% @projeto.errors.full_messages.each do |error| %>
    <div class="alert alert-danger">
        <h6><%= error %></h6>
    </div>
  <% end%>
<% end %>

<%= form_for [@empresa, @projeto] do |form| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= form.label :nome %>
        <%= form.text_field :nome, class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group">
        <%= form.label :valor %>
        <%= form.number_field :valor, class:"form-control" %>
      </div>
    </div>
  </div>
  <br>

  <%= form.submit action_text, class:"btn btn-success" %>
<% end %>